{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustfuck'",
            "program": "${workspaceRoot}/target/debug/${workspaceRootFolderName}",
            "args": ["-o", "${workspaceRoot}/examples/hw.bf"],
            // "cwd": "${workspaceRoot}/target/debug/",
            // "sourceLanguages": ["rust"]
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustfuck",
                    "--package=rustfuck"
                ],
                "filter": {
                    "name": "rustfuck",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}"
